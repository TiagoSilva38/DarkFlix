<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.Toolbar
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:id="@+id/toolBar"
			android:elevation="4dp"
			android:minHeight="?attr/actionBarSize"
			android:background="#111"
			android:gravity="right"/>

			<LinearLayout
				android:id="@+id/content_frame"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="220dp"
					android:orientation="horizontal">
					
					<ImageView
						android:layout_width="170dp"
						android:layout_height="220dp"
						android:id="@+id/main_description_capa"/>
					
					<include layout="@layout/info_serie"/>
					
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
				<Spinner
					android:id="@+id/main_descriptionSpinner"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:minWidth="200dp"
					android:layout_marginLeft="10dp"
					android:gravity="left"/>
					<Spinner
						android:id="@+id/main_descriptionSpinnerAudio"
						android:layout_width="wrap_content"
						android:layout_height="50dp"
						android:minWidth="200dp"
						android:layout_marginLeft="10dp"
						android:gravity="right"/>
				</LinearLayout>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:text="NÃO DISPONÍVEL"
					android:visibility="gone"
					android:id="@+id/disponibility"/>
				
				<ListView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/rec"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"/>
				
			</LinearLayout>
				
			</LinearLayout>
				<android.support.design.widget.NavigationView
					android:layout_gravity="start"
					android:id="@+id/drawer"
					android:background="#111"
					android:layout_width="300dp"
					android:layout_height="fill_parent"
					android:choiceMode="singleChoice">

					<FrameLayout
						android:layout_width="300dp"
						android:layout_height="fill_parent">

						<include
							layout="@layout/main_drawer"/>

					</FrameLayout>

				</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

